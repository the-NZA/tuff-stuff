{
	"compilerOptions": {
		"experimentalDecorators": true,
		"useDefineForClassFields": false,
		"target": "ES2017",
		"module": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"moduleResolution": "Node",
		"strict": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noEmit": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true
	},
	"include": [
		"src"
	]
}